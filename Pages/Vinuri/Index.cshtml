                @Html.DisplayNameFor(model => model.Vin[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Producator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Regiune)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].An)
            </th>
